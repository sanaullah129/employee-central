generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model UserDetails {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username    String   @unique
  password    String
  companyName String
  firstName   String
  lastName    String
  emailId     String   @unique
  phoneNumber Int
  createdAt   DateTime @default(now())
  isAdmin     Boolean
}

model LoginLogs {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  username   String
  token      String
  loggedinAt DateTime @default(now())
}
